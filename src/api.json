{
    "swagger": "2.0",
    "info": {
        "title": "UiTdatabank v3",
        "description": "Version 3 of the UiTdatabank, a central database of cultural offers in the Flanders region.\\n Most operations require that you authenticate first with your UiTID.",
        "contact": {
            "name": "CultuurNet Vlaanderen vzw",
            "url": "http://www.cultuurnet.be",
            "email": "info@uitdatabank.be"
        },
        "version": "3.0.0"
    },
    "host": "io.uitdatabank.be",
    "basePath": "/",
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "tags": [
        {
            "name": "User",
            "description": "Operations related to users"
        },
        {
            "name": "Place",
            "description": "Operations related to places."
        },
        {
            "name": "Event",
            "description": "Operations related to events."
        },
        {
            "name": "Offer",
            "description": "Operations related to all offer types."
        }
    ],
    "paths": {
        "/user": {
            "$ref": "user/user.path.json"
        },
        "/events/{cdbId}/name/{lang}": {
            "$ref": "offer/name.path.json"
        },
        "/events/{cdbId}/theme/{themeId}": {
            "$ref": "offer/theme.path.json"
        },
        "/events/{cdbId}/type/{typeId}": {
            "$ref": "event/type.path.json"
        },
        "/events/{cdbId}/calendar": {
            "$ref": "event/calendar.path.json"
        },
        "/events/{cdbId}/location/{locationId}": {
            "$ref": "event/location.path.json"
        },
        "/places/{cdbId}/name/{lang}": {
            "$ref": "offer/name.path.json"
        },
        "/places/{cdbId}/theme/{themeId}": {
            "$ref": "offer/theme.path.json"
        },
        "/places/{cdbId}/type/{typeId}": {
            "$ref": "place/type.path.json"
        },
        "/places/{cdbId}/calendar": {
            "$ref": "place/calendar.path.json"
        },
        "/places/{cdbId}/{lang}/address": {
            "$ref": "place/address.path.json"
        }
    }
}